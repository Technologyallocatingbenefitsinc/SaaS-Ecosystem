{
    "name": "Phase 12 - SUPPORT VA (WhatsApp Integration)",
    "nodes": [
        {
            "parameters": {
                "filters": {
                    "labelIds": [
                        "INBOX"
                    ],
                    "q": "is:unread (Refund OR Helping OR Support)"
                }
            },
            "name": "Watch Support Inbox",
            "type": "n8n-nodes-base.gmail",
            "typeVersion": 2,
            "position": [
                100,
                300
            ]
        },
        {
            "parameters": {
                "authentication": "oAuth2",
                "resource": "message",
                "operation": "send",
                "phoneNumberId": "YOUR_META_PHONE_ID",
                "recipientPhoneNumber": "YOUR_WHATSAPP_NUMBER",
                "messageType": "template",
                "templateName": "support_alert",
                "templateLanguage": "en_US",
                "components": [
                    {
                        "type": "body",
                        "parameters": [
                            {
                                "type": "text",
                                "text": "={{ $json[\"from\"][\"email\"] }}"
                            },
                            {
                                "type": "text",
                                "text": "={{ $json[\"subject\"] }}"
                            }
                        ]
                    }
                ]
            },
            "name": "WhatsApp Support Alert",
            "type": "n8n-nodes-base.whatsApp",
            "typeVersion": 1,
            "position": [
                300,
                300
            ]
        }
    ],
    "connections": {
        "Watch Support Inbox": {
            "main": [
                [
                    {
                        "node": "WhatsApp Support Alert",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    }
}